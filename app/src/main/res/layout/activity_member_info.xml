<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"
        android:scrollbars="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp">

                <com.jyyl.guideapp.widget.CircleImageView
                    android:id="@+id/iv_member_photoview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="@color/lightgray"
                    app:civ_border_width="1dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_member_name"
                    style="@style/textview_info"
                    android:text="姓名：唐僧"/>

                <TextView
                    android:id="@+id/tv_member_card_id"
                    style="@style/textview_info"
                    android:text="身份证：666666666666666666"/>

                <TextView
                    android:id="@+id/tv_linkman_name"
                    style="@style/textview_info"
                    android:text="联系人：孙猴子"/>

                <TextView
                    android:id="@+id/tv_linkman_phone"
                    style="@style/textview_info"
                    android:text="联系人电话：88888888888"/>

                <TextView
                    android:id="@+id/tv_binding_deviceid"
                    style="@style/textview_info"
                    android:text="绑定设备编号：1"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
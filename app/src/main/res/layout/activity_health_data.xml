<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/blood_pressure"
                layout="@layout/health_data_blood_pressure"/>

            <include
                android:id="@+id/blood_sugar"
                layout="@layout/health_data_blood_sugar"/>

            <include
                android:id="@+id/heart_rate"
                layout="@layout/health_data_heart_rate"/>

            <include
                android:id="@+id/step_counter"
                layout="@layout/health_data_step_counter"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>